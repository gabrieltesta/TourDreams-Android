<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.tourdreams.com.br.HistoricoReservasActivity"
    tools:showIn="@layout/activity_historico_reservas"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Você não fez nenhuma reserva ainda."
        android:padding="16dp"
        android:textSize="9pt"
        android:visibility="gone"
        android:id="@+id/text_view_historico_erro"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_view_historico_reservas"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:layout_marginTop="8dp"></ListView>

</LinearLayout>
