<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/border">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/border">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/homenorte"
                android:id="@+id/img_busca_hotel"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textAllCaps="true"
                    android:text="Hotel"
                    android:textSize="8pt"
                    android:layout_weight="1"
                    android:id="@+id/text_view_hotel"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="80"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="7pt"
                    android:id="@+id/text_view_avaliacao"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RatingBar
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:numStars="5"
                    android:clickable="false"
                    android:rating="3.0"
                    android:id="@+id/rat_qtd_estrelas"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:textSize="5pt"
                    android:text="123 avaliações"
                    android:textAlignment="center"
                    android:id="@+id/text_view_qtd_avaliacoes"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bairro Exemplo, Exemplo - EX"
                android:id="@+id/text_view_local"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#008000"
                android:text="R$ 150,00"
                android:textSize="8pt"
                android:id="@+id/text_view_valor"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>