<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.tourdreams.com.br.MainActivity"
    tools:showIn="@layout/app_bar_main"
>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:paddingBottom="12dp"
        android:paddingTop="12dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="       Selecione uma região ou selecione o ícone de pesquisa no menu superior para procurar uma acomodação."/>

        <TextView
            android:id="@+id/img_norte"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/homenorte"
            android:gravity="center"
            android:text="NORTE"
            android:textAllCaps="true"
            android:textColor="#eee"
            android:textSize="18pt"
            android:layout_marginTop="12dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/img_nordeste"
            android:background="@drawable/homenordeste"
            android:layout_marginTop="24dp"
            android:text="NORDESTE"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="18pt"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/img_centrooeste"
            android:layout_marginTop="24dp"
            android:background="@drawable/homecentrooeste"
            android:text="CENTRO-OESTE"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="18pt"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/img_sudeste"
            android:layout_marginTop="24dp"
            android:background="@drawable/homesudeste"
            android:text="SUDESTE"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="18pt"
            android:textColor="#fff"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/img_sul"
            android:layout_marginTop="24dp"
            android:background="@drawable/homesul"
            android:text="SUL"
            android:gravity="center"
            android:textAllCaps="true"
            android:textSize="18pt"
            android:textColor="#fff"/>
    </LinearLayout>
</ScrollView>
