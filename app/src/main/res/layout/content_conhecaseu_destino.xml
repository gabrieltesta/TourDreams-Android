                android:layout_height="wrap_content"
                android:text="Busque por uma cidade"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="SÃ£o Paulo"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/list_view_avaliacoes"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp">
    </ListView>


</LinearLayout>
